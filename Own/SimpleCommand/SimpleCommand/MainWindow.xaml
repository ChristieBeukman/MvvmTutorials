<Window x:Class="SimpleCommand.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleCommand"
        xmlns:vm="clr-namespace:SimpleCommand.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Window.DataContext>
        <vm:MainViewModel x:Name="ViewModel"/>
    </Window.DataContext>
    <Grid>
        <StackPanel>
            <Button Content="press" Command="{Binding SimpleCommand, Mode=OneWay}" />
            <Button Content="parameter" Command="{Binding ParameterCommand}" CommandParameter="piele" />
            <Button Content="Disable" Command="{Binding EnableDisableCommand, Mode=OneWay}"/>
            <CheckBox IsChecked="{Binding EnableDisableCommand.CanExecute, Mode=TwoWay}" Content="Enabled" HorizontalAlignment="Center" />
            
        </StackPanel>
    </Grid>
</Window>
